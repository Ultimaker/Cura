{
    "app-id": "com.ultimaker.cura",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "UltiMaker-Cura",
    "separate-locales": false,
    "rename-desktop-file": "cura.desktop",
    "rename-appdata-file": "cura.appdata.xml",
    "rename-icon": "cura-icon",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-desktop:rw",
        "--filesystem=xdg-documents:rw",
        "--filesystem=xdg-download:rw",
        "--filesystem=/media:rw",
        "--filesystem=/mnt:rw",
        "--filesystem=/run/media:rw",
        "--filesystem=/tmp:rw",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.portal.Desktop",
        "--talk-name=org.freedesktop.portal.FileChooser",
        "--env=QT_QPA_PLATFORMTHEME=kde",
        "--env=QT_QPA_PLATFORM=xcb;wayland",
        "--env=QT_PLUGIN_PATH=/app/qt/plugins",
        "--env=QML2_IMPORT_PATH=/app/qt/qml",
        "--env=GDK_PIXBUF_MODULEDIR=/app/usr/lib/x86_64-linux-gnu/gdk-pixbuf-2.0/2.10.0/loaders",
        "--env=LD_LIBRARY_PATH=/app/lib:/app/usr/lib/x86_64-linux-gnu:/app/usr/lib"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "23.08",
            "add-ld-path": "."
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/man",
        "/share/doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "cura",
            "buildsystem": "simple",
            "build-commands": [
                "# Copy the PyInstaller distribution",
                "cp -r dist/UltiMaker-Cura/* /app/",
                "# Install desktop integration",
                "install -Dm644 packaging/Flatpak/cura.desktop /app/share/applications/cura.desktop",
                "install -Dm644 packaging/Flatpak/cura.appdata.xml /app/share/metainfo/cura.appdata.xml",
                "# Install icons at multiple resolutions",
                "install -Dm644 packaging/icons/cura-icon.svg /app/share/icons/hicolor/scalable/apps/cura-icon.svg",
                "install -Dm644 packaging/icons/cura-icon_64x64.png /app/share/icons/hicolor/64x64/apps/cura-icon.png",
                "install -Dm644 packaging/icons/cura-icon_128x128.png /app/share/icons/hicolor/128x128/apps/cura-icon.png",
                "install -Dm644 packaging/icons/cura-icon_256x256.png /app/share/icons/hicolor/256x256/apps/cura-icon.png",
                "# Install MIME type information",
                "install -Dm644 cura.sharedmimeinfo /app/share/cura/cura.sharedmimeinfo"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../../"
                }
            ]
        }
    ]
}